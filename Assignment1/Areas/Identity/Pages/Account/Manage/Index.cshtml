@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Profile Picture Preview -->
            <div class="mb-3">
                <label class="form-label">Profile Picture</label>
                <br />
                <img src="~/images/@(Model.Input.ImageFilename ?? "default-profile.png")" alt="Profile Picture" class="img-thumbnail" width="150" />
                <br />
                <input type="file" asp-for="Input.ImageFile" class="form-control mt-2" />
            </div>

            <!-- Full Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Enter your full name" />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Location -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Location" class="form-control" placeholder="Enter your location" />
                <label asp-for="Input.Location" class="form-label"></label>
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
